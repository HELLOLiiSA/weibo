<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/pdraw"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="您收到的评论:"
                android:textSize="20sp"
                />




    <android.support.v7.widget.RecyclerView
        android:id="@+id/lstmPL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
        </LinearLayout>

    <!--侧滑界面-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#ded3d3"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pimguser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/ptuser_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50sp"/>


        <Button
            android:id="@+id/pbutton_write"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发表新微博"
            />

        <Button
            android:id="@+id/pbutton_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关于我"
            />

        <Button
            android:id="@+id/pbutton_index"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="首页"
            />

        <Button
            android:id="@+id/pbutton_massage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的消息"
            />

        <Button
            android:id="@+id/pbutton_quitto_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="退出登陆"
            />



    </LinearLayout>
</android.support.v4.widget.DrawerLayout>



</LinearLayout>
